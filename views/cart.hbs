<h1>{{title}}</h1>
{{# if products }}
<div class="cart page">
    <ul class="list-group">
        {{# each products }}
        <li class="list-group-item clearfix">
            <div class="col-xs-5">
                <strong>{{ this.item.name }}</strong><br />
                <em>{{{this.item.description}}}</em>
            </div>
            <div class="col-xs-2 text-right">
                <span class="badge">{{ this.quantity }}</span>
            </div>
            <div class="col-xs-3 text-right">
                {{ this.price }}.00 Bhat
            </div>
            <div class="col-xs-2 text-right">
                <a href="/remove/{{this.item.id}}" class="btn btn-default"></i> Remove</a>
            </div>
        </li>
        {{/each}}
    </ul>
</div>
<div style=" display: flex;
  justify-content: space-between;
  align-items: center;">
  <form id="discountForm" action="/discount/" method="post" style="display: flex;justify-content:center; align-items:center">
    <div class="form-check">
      <input
        class="form-check-input"
        type="checkbox"
        id="memberCard"
        name="memberCard"
      />
      <label id="discountLabel" class="form-check-label" for="memberCard">Member Card</label>
    </div>
    <button type="submit" id="discountButton" class="btn btn-primary" style="display: none; margin-left:10px">Apply 10% Discount</button>
  </form>
  
  <div class="text-right">
    <strong>Total: {{ totalPrice }} Bhat</strong>
  </div>
</div>

<hr>
{{ else }}
Add items to your cart!{{/if}}

<script>
  document.getElementById('memberCard').addEventListener('change', function() {
    var button = document.getElementById('discountButton');
    if (this.checked) {
      button.style.display = 'inline-block';
    } else {
      button.style.display = 'none';
    }
  });
</script>